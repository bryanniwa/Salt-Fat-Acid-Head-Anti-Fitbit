<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_cardview"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/useless_picture"
        android:padding="2dp"/>

    <TextView
        android:id="@+id/text_line_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/useless_picture"
        android:text="@string/line_1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_line_1"
        android:layout_alignParentTop="false"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/text_line_1"
        android:text="@string/line_2"
        android:textSize="15sp" />

</androidx.cardview.widget.CardView>